#!groovy


pipeline {
  agent any

  options {
    ansiColor("xterm")
  }

  stages {
    stage('SetUp') {
        steps {
            scripts {
                def config = readJson file: 'config.json'
            }
        }
    }
  
    stage('Tests') {
      steps {
        executeTests()
      }
    }
  }

  post {
    always {
    
      sh 'echo $PWD'
    
      // Processing test results
      junit 'build/results/scan/report.junit'
      
      // Cleanup
      sh 'rm -rf build'
    }
    
    success {
      sh 'echo "success :)"'
    }
    
    failure {
      sh 'echo "failure :("'
    }
  }
}

void executeTests() {
    sh 'bundle exec fastlane test'
}
