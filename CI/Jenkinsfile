#!groovy

def config = readJSON file: 'config.json'

pipeline {
  agent any

  options {
    ansiColor("xterm")
  }

  stages {
    stage('SetUp') {
        steps {
            echo '${config}'
        }
    }
  
    stage('Tests') {
      steps {
        sh 'bundle exec fastlane test'
      }
    }
  }

  post {
    always {
    
      sh 'echo $PWD'
    
      // Processing test results
      junit 'build/results/scan/report.junit'
      
      // Cleanup
      sh 'rm -rf build'
    }
    
    success {
      sh 'echo "success :)"'
    }
    
    failure {
      sh 'echo "failure :("'
    }
  }
}
