fastlane_version "2.66.2"

desc "Run test coverage"
lane :coverage do
    slather(
        proj: "JenkinsDemo.xcodeproj",
        # workspace: "JenkinsDemo.xcworkspace",
        scheme: "JenkinsDemo",
        input_format: "auto",
        source_directory: "./#{projectName}/",
        output_directory: "./#{reportsPath}/slather/",
        html: true,
        jenkins: true
    )
end

desc "Runs all the tests"
lane :test do
    scan(
        project: "JenkinsDemo.xcodeproj",
        #workspace: "#{projectName}.xcworkspace",
        configuration: "Debug",
        scheme: "JenkinsDemo",
        device: "iPhone 8",
        clean: true,
        prelaunch_simulator: true,
        output_directory: "build/results/scan",
        output_types: "html,junit"
    )
end
