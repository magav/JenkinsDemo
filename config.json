{
    "environment": {
        "projectName": "JenkinsDemo",
        "workspaceName": "JenkinsDemo",
        "sourcePath": "./JenkinsDemo/",
        "reportPath": "build/report",
        "outputPath": "build/output"
    },
    "stages": {
        "setUp": {
            "title": "Set Up",
            "cocoaPods": {
                "isEnabled": true,
                "podFile": "Podfile"
            },
            "carthage": {
                "isEnabled": false,
                "platform": "iOS"
            }
        },
        "test": {
            "isEnabled": true,
            "title": "Test",
            "scheme": "JenkinsDemo",
            "devices": ["iPhone 8"],
            "isCoverageEnabled": true
        },
        "analyze": {
            "title": "Analyze",
            "swiftLint": {
                "isEnabled": true,
                "configFile": null
            },
            "cloc": {
                "isEnabled": true,
                "excludeDirectories": "Resources"
            }
        },
        "build": {
            "isEnabled": true,
            "title": "Build",
            "items": [
                {
                    "id": "0",
                    "configuration": "Release",
                    "scheme": "JenkinsDemo-Staging",
                    "exportMethod": "ad-hoc",
                    "provisioningProfiles": [
                        {
                            "id": "com.telesoftas.jenkins.demo.staging",
                            "name": "Generic Adhoc"
                        }
                    ]
                }
            ]
        },
        "distribution": {
            "isEnabled": true,
            "title": "Distribution"
        }
    }
}
